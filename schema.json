{
  "$schema": "http://json-schema.org/schema",
  "$id": "schema.json",
  "$defs": {
    "uuid": {
      "type": "string",
      "pattern": "^[a-f0-9]{8}-[a-f0-9]{4}-4[a-f0-9]{3}-[89aAbB][a-f0-9]{3}-[a-f0-9]{12}$"
    },
    "id": {
      "type": "string",
      "pattern": "^([a-z][a-z0-9]*)(-[a-z0-9]+)*$"
    },
    "label": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "options": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "uuid": {
            "$ref": "#/$defs/uuid"
          },
          "label": {
            "$ref": "#/$defs/label"
          },
          "value": {
            "type": "string"
          }
        },
        "additionalProperties": false,
        "required": ["uuid", "value", "label"],
        "defaultSnippets": [
          {
            "label": "option",
            "body": {
              "uuid": "$UUID",
              "value": "${1}",
              "label": "${2:/capitalize}"
            }
          }
        ]
      }
    }
  },
  "title": "Makaira component fields",
  "description": "an unofficial representation of component editor fields",
  "type": "array",
  "items": {
    "properties": {
      "uuid": {
        "$ref": "#/$defs/uuid",
        "defaultSnippets": [
          {
            "label": "uuid",
            "description": "generate a version 4 UUID",
            "body": "$UUID"
          }
        ]
      },
      "id": {
        "$ref": "#/$defs/id"
      },
      "label": {
        "$ref": "#/$defs/label"
      },
      "description": {
        "$ref": "#/$defs/description"
      }
    },
    "oneOf": [
      {
        "type": "object",
        "properties": {
          "type": {
            "enum": ["text", "richtext"]
          },
          "defaultValue": {
            "type": "string"
          }
        },
        "defaultSnippets": [
          {
            "label": "text",
            "body": {
              "uuid": "$UUID",
              "id": "${1/ /-/g}",
              "label": "${2:/capitalize}",
              "type": "text"
            }
          },
          {
            "label": "richtext",
            "body": {
              "uuid": "$UUID",
              "id": "${1/ /-/g}",
              "label": "${2:/capitalize}",
              "type": "richtext"
            }
          }
        ]
      },
      {
        "type": "object",
        "properties": {
          "type": {
            "const": "number"
          },
          "defaultValue": {
            "type": "number"
          }
        },
        "defaultSnippets": [
          {
            "label": "number",
            "body": {
              "uuid": "$UUID",
              "id": "${1/ /-/g}",
              "label": "${2:/capitalize}",
              "type": "number"
            }
          }
        ]
      },
      {
        "type": "object",
        "properties": {
          "type": {
            "const": "file"
          }
        },
        "defaultSnippets": [
          {
            "label": "file",
            "body": {
              "uuid": "$UUID",
              "id": "${1/ /-/g}",
              "label": "${2:/capitalize}",
              "type": "file"
            }
          }
        ]
      },
      {
        "type": "object",
        "properties": {
          "type": {
            "const": "checkbox"
          },
          "defaultValue": {
            "type": "boolean"
          }
        },
        "required": ["defaultValue"],
        "defaultSnippets": [
          {
            "label": "checkbox",
            "body": {
              "uuid": "$UUID",
              "id": "${1/ /-/g}",
              "label": "${2:/capitalize}",
              "type": "checkbox",
              "defaultValue": false
            }
          }
        ]
      },
      {
        "type": "object",
        "properties": {
          "type": {
            "const": "select"
          },
          "options": {
            "$ref": "#/$defs/options"
          },
          "defaultValue": {
            "type": "string"
          }
        },
        "required": ["options"],
        "defaultSnippets": [
          {
            "label": "select",
            "body": {
              "uuid": "$UUID",
              "id": "${1/ /-/g}",
              "label": "${2:/capitalize}",
              "type": "select",
              "options": ["^${3}"]
            }
          }
        ]
      },
      {
        "type": "object",
        "properties": {
          "type": {
            "const": "multiselect"
          },
          "options": {
            "$ref": "#/$defs/options"
          },
          "defaultValue": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": ["options"],
        "defaultSnippets": [
          {
            "label": "multiselect",
            "body": {
              "uuid": "$UUID",
              "id": "${1/ /-/g}",
              "label": "${2:/capitalize}",
              "type": "multiselect",
              "options": ["^${3}"]
            }
          }
        ]
      },
      {
        "type": "object",
        "properties": {
          "type": {
            "const": "object"
          },
          "properties": {
            "$ref": "#"
          }
        },

        "defaultSnippets": [
          {
            "label": "object",
            "body": {
              "uuid": "$UUID",
              "id": "${1/ /-/g}",
              "label": "${2:/capitalize}",
              "type": "object",
              "properties": ["^${3}"]
            }
          }
        ]
      },
      {
        "type": "object",
        "properties": {
          "type": {
            "const": "array"
          },
          "childConfig": {
            "type": "object",
            "properties": {
              "id": {
                "$ref": "#/$defs/uuid"
              },
              "type": {
                "enum": ["text", "number", "file", "object"]
              }
            },
            "required": ["id", "type"]
          },
          "properties": {
            "$ref": "#"
          }
        },
        "required": ["childConfig"],
        "defaultSnippets": [
          {
            "label": "array",
            "body": {
              "uuid": "$UUID",
              "id": "${1/ /-/g}",
              "label": "${2:/capitalize}",
              "type": "array",
              "childConfig": {
                "id": "$UUID",
                "type": "${3|text,number,file,object|}"
              }
            }
          }
        ]
      },
      {
        "type": "object",
        "properties": {
          "type": {
            "const": "documents"
          },
          "documentType": {
            "type": "string",
            "enum": ["product", "link", "searchredirect", "page"]
          },
          "defaultValue": false
        },
        "required": ["documentType"],
        "defaultSnippets": [
          {
            "label": "documents",
            "body": {
              "uuid": "$UUID",
              "id": "${1/ /-/g}",
              "label": "${2:/capitalize}",
              "type": "documents",
              "documentType": "${3|product,link,searchredirect,page|}"
            }
          }
        ]
      },
      {
        "type": "object",
        "properties": {
          "type": {
            "enum": ["stream", "colorpicker"]
          }
        },
        "defaultSnippets": [
          {
            "label": "stream",
            "body": {
              "uuid": "$UUID",
              "id": "${1/ /-/g}",
              "label": "${2:/capitalize}",
              "type": "stream"
            }
          },
          {
            "label": "colorpicker",
            "body": {
              "uuid": "$UUID",
              "id": "${1/ /-/g}",
              "label": "${2:/capitalize}",
              "type": "colorpicker"
            }
          }
        ]
      },
      {
        "type": "object",
        "properties": {
          "type": {
            "const": "hotspot"
          },
          "properties": {
            "$ref": "#"
          }
        },
        "defaultSnippets": [
          {
            "label": "hotspot",
            "body": {
              "uuid": "$UUID",
              "id": "${1/ /-/g}",
              "label": "${2:/capitalize}",
              "type": "hotspot",
              "properties": ["^${3}"]
            }
          }
        ]
      }
    ],
    "required": ["uuid", "id", "type"]
  }
}
